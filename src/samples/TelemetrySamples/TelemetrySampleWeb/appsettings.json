{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "UseTracingExporter": "otlp",
  "UseMetricsExporter": "otlp",
  "UseLogExporter": "loki",
  "Jaeger": {
    "AgentHost": "localhost",
    "AgentPort": 6831,
    "Endpoint": "http://localhost:6831",
    "Protocol": "UdpCompactThrift"
  },
  "Prometheus": {
    "ScrapeResponseCacheDurationMilliseconds": 5000
  },
  "Zipkin": {
    "Endpoint": "http://localhost:9411/api/v2/spans"
  },
  "Otlp": {
    "Endpoint": "http://k8s.local:4318"
  },
  "Loki": {
    "Endpoint": "http://k8s.local:3100"
  },
  "AspNetCoreInstrumentation": {
    "RecordException": "true"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://k8s.local:3100",
          "textFormatter": "Serilog.Sinks.Grafana.Loki.LokiJsonTextFormatter, Serilog.Sinks.Grafana.Loki",
          "filtrationMode": "Include",
          "filtrationLabels": [
            "app"
          ]
        }
      },
      {"Name": "Console"}
    ]
  }
}